<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recordImageCG"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/recordTitleCG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_toRightOf="@id/recordImage"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/recordDateCG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:layout_toRightOf="@id/recordImage"
            android:layout_below="@id/recordTitle"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            />

        <TextView
            android:id="@+id/recordCommentsCG"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Comment"
            android:layout_toRightOf="@id/recordImage"
            android:layout_below="@id/recordDate"
            android:scrollbars="vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            />

        <ImageButton
            android:id="@+id/recordAddCommentCG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recordDate"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_circle_add_button"
            />





    </RelativeLayout>

</android.support.v7.widget.CardView>