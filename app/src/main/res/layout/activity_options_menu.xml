<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsMenuActivity">

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="246dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/EditProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Problem Detail" />

        <Button
            android:id="@+id/EditRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add/View Records" />

        <Button
            android:id="@+id/RecordSlide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Record in Slide Mode" />

        <Button
            android:id="@+id/GeoLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Geo Location" />

        <Button
            android:id="@+id/setRemindersBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SET REMINDER" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>